properties([pipelineTriggers([githubPush()])])

pipeline {
    agent {
        docker {
            image 'node:6-alpine' 
            args '-p 3000:3000' 
        }
    }
    environment { 
      HOME="." 
      CI = 'true'
    }
    stages {
        stage ('Checkout'){
            git branch: 'master', url: 'https://github.com/alee156/ant-design-pro'
        }
        stage('Build') { 
            steps {
                sh 'npm install' 
            }
        }
    }
}
